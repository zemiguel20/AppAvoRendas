{
  "name": "app-avo-rendas",
  "version": "1.0.0",
  "description": "Desktop standalone app for managing rent for personal use. Based on Electron, React, Bootstrap, Webpack and Electron-builder",
  "private": "true",
  "main": "./main.js",
  "homepage": "./",
  "license": "cc0-1.0",
  "author": {
    "name": "Jos√© Coutinho",
    "email": "migli.coutinho@gmail.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.config.js --mode=development",
    "build-prod": "webpack --config webpack.config.js --mode=production",
    "dist": "electron-builder -c.extraMetadata.main='./main.js' -wl --x64"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "bootstrap": "^4.5.2",
    "lodash": "^4.17.20",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1"
  },
  "build": {
    "appId": "com.appavo",
    "files": [
      "build/**/**/*",
      "node_modules/**/*",
      "./main.js"
    ],
    "extraFiles": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "*.jpg",
          "*.png"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "256x256.png"
    }
  }
}